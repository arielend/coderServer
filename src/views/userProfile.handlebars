<h1 class='text-center my-2'>User profile page</h1>

{{#if user}}

    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-7">
                <div class="profileCard p-3 py-4 bg-white">
                    <div class="text-center">
                        <img src={{user.photo}} width="100" class="rounded-circle">
                    </div>

                    <div class="text-center mt-3">
                        <span class="bg-secondary p-1 px-4 rounded text-white">{{user.role}}</span>
                        <h5 class="mt-2 mb-0">{{user.username}}</h5>
                        <span>{{user.email}}</span>

                        <div class="px-4 mt-1">
                            <p class="fonts" style="color: #3f5da2; font-size: 14px;"> {{user.bio}} </p>
                        </div>
                    
                        <div class="buttons">                        
                            <button class="btn btn-outline-primary px-4">Billing info</button>
                            <button class="btn btn-primary px-4 ms-3">Profile info</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{else}}
    <h3 class="text-center pt-4 text-primary">No existe el usuario</h>
{{/if}}