            <img class='bg-secondary-subtle rounded rounded-3 me-4' style='height: 70px' src="/images/keyboards_icon.png" alt="" />
        </a>

        <a href='/api/products?category=storage_drives' title="storage" style="text-decoration: none;">
            <img class='bg-secondary-subtle rounded rounded-3 me-4' style='height: 70px' src="/images/drives_icon.png" alt="" />
        </a>

        <a href='/api/products?category=motherboards' title="motherboards" style="text-decoration: none;">
            <img class='bg-secondary-subtle rounded rounded-3 me-4' style='height: 70px' src="/images/motherboards_icon.png" alt="" />
        </a>

        <a href='/api/products?category=ram_memory' title="ram memories" style="text-decoration: none;">
            <img class='bg-secondary-subtle rounded rounded-3 me-4' style='height: 70px' src="/images/ramMemories_icon.png" alt="" />
