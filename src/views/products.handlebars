<h1 class="text-center my-2">Productos</h1>

<div class='row row-cols-1 row-cols-md-3 mb-3 text-center'>
    {{#each products}}
        <div class='col'>
            <div class='card mb-4 rounded-3 shadow-sm'>
                <div class='card-header py-3'>
                    <h4 class='my-0 fw-normal'>{{this.category}}</h4>
                </div>
                <div class='card-body'>
                    <h5>{{this.title}}</h5>
                    <h6 class='card-title'>
                        ${{this.price}}
                    </h6>
                    <a href="/products/{{this._id}}" class='w-100 btn btn-lg btn-outline-primary'>
                        View details
                    </a>
                </div>
            </div>
        </div>
    {{/each}}
</div>

