<div class="d-flex flex-column justify-content-center align-items-center" style="min-height: 100vh;">
    <h1 class='text-white text-center my-2'>Create your account</h1>
    <form>
        <div class="d-flex justify-content-center">
            <div class="card" style="background: rgba(255, 255, 255, 0.1); box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1); backdrop-filter: blur(5px); padding: 20px;">
                <div class="card-header">
                    <h3 class="text-white">Sign Up</h3>                    
                </div>
                <div class="card-body">
                    <form id="login_form"> 
                        <div class="d-flex gap-4 justify-content-center align-items-center">
                            <img src="/images/user_icon.svg" style="height: 30px;"/>
                            <input id="email" name="email" type="text" class="form-control my-2 text-white" placeholder="e-mail" style="background: rgba(255, 255, 255, 0.379); box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1); backdrop-filter: blur(5px) color:white;">
                        </div>

                        <div class="d-flex gap-4 justify-content-center align-items-center">
                            <img src="/images/pass_icon.svg" style="height: 30px;"/>
                            <input id="password" name="password" type="password" class="form-control my-2" placeholder="password" style="background: rgba(255, 255, 255, 0.379); box-shadow: 0 4px 30px rgba(20, 19, 19, 0.1); backdrop-filter: blur(2px); color:white;">
                        </div>

                        <div class="d-flex gap-4 justify-content-center align-items-center">
                            <img src="/images/camera_icon.svg" style="height: 30px;"/>
                            <input id="photo_url" name="photo_url" type="text" class="form-control my-2" placeholder="Paste url photo" style="background: rgba(255, 255, 255, 0.379); box-shadow: 0 4px 30px rgba(20, 19, 19, 0.1); backdrop-filter: blur(2px); color:white;" onchange="handleFiles(this.files)" />
                        </div>
                        
                        <div class="d-flex gap-4 justify-content-center align-items-center">
                            <button type="button" id="btn_register" class="btn border-1 border-white rounded px-4 text-white">Register</button>                           
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex justify-content-center links text-white">
                        Do you have an account?<a href="/" class="ms-4" style="color: #EAFF6A; text-decoration: none;">Login</a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a href="#" style="color: #EAFF6A; text-decoration: none;">Forgot your password?</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/scripts/register.js"></script>