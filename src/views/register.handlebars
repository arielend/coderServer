<h1 class='text-center my-2'>Register</h1>

<div class=''>

    <form class='d-flex flex-column w-25 m-auto align-items-center border border-secondary rounded p-4' >

        <div class='form-group w-100 my-2'>
            <label for='exampleFormControlInput1'>Email</label>
            <input
                type='email'
                class='form-control'
                id='email'
                placeholder='Email'
            />
        </div>

        <div class='form-group w-100 my-2'>
            <label for='exampleFormControlInput1'>Password</label>
            <input
                type='password'
                class='form-control'
                id='password'
                placeholder='Password'
            />
        </div> 

        <div class="form-group w-100 mt-2">
            <label for="formFile" class="form-label">Add profile photo</label>
            <input class="form-control" type="file" id="photo" name="photo" onchange="handleFiles(this.files)">
        </div>

        <div class='form-group w-70 mt-2'>
            <input
                id='register'
                name='register'
                type='button'
                class='btn btn-primary'
                value='Register'
            />
        </div>        

    </form>

</div>

<script src='/socket.io/socket.io.js'></script>
<script src="/scripts/handleFiles.js"></script>