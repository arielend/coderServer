{
  "name": "coderserver",
  "version": "1.0.0",
  "description": "Servidor creado en el curso backend de Coderhouse, por Ariel Endrizzi",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node ./server.js --port 8080 --env production --pers mongo",
    "dev": "nodemon ./server.js --port 8080 --env development --pers mongo",
    "test": "node ./server.js --port 8081 --env testing --pers memory",
    "fs": "node ./server.js --port 8083 --env test --pers fs",
    "mocks": "node ./src/mocks/mocks.js",
    "simplex": "artillery quick --count 20 --num 100 http://localhost:9000/api/test/simplex -o ./test/artillery/simplex.json",
    "complex": "artillery quick --count 20 --num 100 http://localhost:9000/api/test/complex -o ./test/artillery/complex.json",
    "flow": "artillery run ./test/artillery/flow.yaml -o ./test/artillery/flow.json",
    "report": "artillery report ./test/artillery/flow.json",
    "image": "docker build -t coderserver .",
    "container": "docker run -p 8000:8080 coderserver",
    "container-dev": "docker run -p 8001:8080 coderserver-dev",
    "publish": "docker tag coderserver arielend/coderserver:1.0.0 & docker push arielend/coderserver:1.0.0",
    "orch": "kubectl apply -f ./orch.yaml",
    "mocha": "mocha ./test/mocha",
    "chai": "mocha ./test/chai",
    "supertest": "mocha ./test/supertest"
  },
  "keywords": [],
  "author": "Ariel Endrizzi",
  "license": "ISC",
  "dependencies": {
    "artillery-plugin-metrics-by-endpoint": "^1.12.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "commander": "^12.1.0",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-compression": "^1.0.2",
    "express-handlebars": "^7.1.3",
    "express-session": "^1.18.0",
    "handlebars": "^4.7.8",
    "joi": "^17.13.3",
    "joi-oid": "^1.1.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2",
    "mongoose-paginate-v2": "^1.8.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.14",
    "passport": "^0.7.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "socket.io": "^4.7.5",
    "stripe": "^16.9.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "chai": "^5.1.1",
    "mocha": "^10.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0"
  }
}
